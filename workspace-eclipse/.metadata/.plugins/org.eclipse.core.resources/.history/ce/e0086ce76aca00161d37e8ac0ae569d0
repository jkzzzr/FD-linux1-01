package test;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileInputStream;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.InputStreamReader;
import java.util.regex.Matcher;
import java.util.zip.GZIPInputStream;

public class test_display {
	public static void main(String[] args) throws Exception {
		GZIPInputStream gzipInputStream = new GZIPInputStream(
				new FileInputStream(
						"/media/clueweb09_1of2/ClueWeb09_English_1/en0000/00.warc.gz"));
		
		BufferedWriter bWriter = new BufferedWriter(new FileWriter("/home/Lee/data/test/bbb2-contrast"));
		BufferedReader bufferedReader = new BufferedReader(
				new FileReader("/home/Lee/data/test/bbb2"));
		long index = 0L;
		String temp = "";
		while ((temp = bufferedReader.readLine())!=null){
			index = Long.parseLong(temp);
	//		BufferedReader bReader = new BufferedReader(new InputStreamReader(gzipInputStream, "UTF-8"));
			bReader.skip(index);
			bWriter.write(bReader.readLine());
			bReader.close();
		}
		bWriter.flush();
		bWriter.close();
	}
}
